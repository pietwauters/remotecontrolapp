<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CyranoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true"
    android:orientation="vertical"
    tools:context=".Cyrano">

    <TextView
        android:id="@+id/textViewNameLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="left"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="" />

    <TextView
        android:id="@+id/textViewNameRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="right "
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="" />

    <TextView
        android:id="@+id/textViewScoreLeftCyrano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNameLeft"
        tools:text="Name left competitor" />

    <TextView
        android:id="@+id/textViewScoreRightCyrano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="14 "
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNameRight"
        tools:text="" />

    <Button
        android:id="@+id/btnPrevMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:text="Prev"
        app:layout_constraintBottom_toTopOf="@id/btnBeginMatch"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnBeginMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:text="Begin"
        app:layout_constraintBottom_toTopOf="@id/btnReserveLeft"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewCyranoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="10.154.1.100"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/btnEndMatch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBeginMatch"
        app:layout_constraintBottom_toTopOf="@id/btnSwapSides"
        tools:text="" />

    <Button
        android:id="@+id/btnNextMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:text="Next"
        app:layout_constraintBottom_toTopOf="@id/btnEndMatch"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnEndMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:text="End"
        app:layout_constraintBottom_toTopOf="@id/btnReserveRight"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnReserveLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="12dp"
        android:text="Reserve L"
        app:layout_constraintBottom_toTopOf="@id/btnAbandonLeft"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btnAbandonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"
        android:text="Abandon L"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnReserveRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="12dp"
        android:text="Reserve R"
        app:layout_constraintBottom_toTopOf="@id/btnAbandonRight"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/btnAbandonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"
        android:text="Abandon R"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnSwapSides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Swap Sides"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>